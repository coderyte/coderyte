<% @page_title = "Registration" %>
<div class="container">
	<div class="center">
		<h1>Coderyte</h1>
		<h3>Learn to develop, design &amp; deploy web apps.</h3>
	</div>
	<div class="row">
		<div class="col-sm-8">
			<%= form_for @registrant do |f| %>
				<% if @registrant.errors.any? %>
					<div id="error_explanation", class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><%= pluralize(@registrant.errors.count, "error") %> prohibited this event from being saved:</h4>
            <ul>
		          <% @registrant.errors.full_messages.each do |msg| %>
		            <li><%= msg %></li>
		          <% end %>
          </ul>
          </div>
				<% end %>
				  <div class="form-group">
	          <%= f.label :reason, "Why are you applying to Coderyte?" %>
	          <%= f.text_area :reason, class: "form-control" %>
        	</div>

        	<div class="form-group">
	          <%= f.label :problem, "What is the one problem in your life that you are burning to solve? Why?" %>
	          <%= f.text_area :problem, class: "form-control" %>
        	</div>

        	<div class="form-group">
	          <%= f.label :story, "Tell us a story that exemplifies who you are." %>
	          <%= f.text_area :story, class: "form-control" %>
        	</div>

        	<div class="form-group">
	          <%= f.label :more_story, "Tell us more about yourself by sharing a link to your blog, a video or your site" %>
	          <%= f.text_field :more_story, class: "form-control" %>
        	</div>

        	<div class="form-group">
	          <%= f.label :experience, "Please describe any prior programming experience, if any." %>
	          <%= f.text_area :experience, class: "form-control" %>
        	</div>

        	<div class="form-group">
	          <%= f.label :price_range, "How much should a course like this cost in cedis?" %>
	          <%= f.select :price_range, ["Select one", "800-1000", "1000-1200"], class: "select" %>
        	</div>

        	<hr>
        <h4>Personal Details</h4>
	        <div class="form-group">
	          <%= f.label :first_name %>
	          <%= f.text_field :first_name, class: "form-control" %>
	        </div>

	        <div class="form-group">
	          <%= f.label :last_name %>
	          <%= f.text_field :last_name, class: "form-control" %>
        	</div>

	        <div class="form-group">
	          <%= f.label :email %>
	          <%= f.email_field :email, class: "form-control" %>
	        </div>

	        <div class="form-group">
	          <%= f.label :phone %>
	          <%= f.text_field :phone, class: "form-control" %>
	        </div>

          <div class="form-group">
	          <%= f.label :age %>
	          <%= f.number_field :age, class: "form-control" %>
        	</div>

          <div class="form-group">
	          <%= f.label :residence, "Where do live?" %>
	          <%= f.text_field :residence, class: "form-control" %>
        	</div>

        	<div class="form-group">
	          <%= f.label :education, "Highest Education level" %>
	          <%= f.select :education, ["Choose One", "Senior High School", "Bachelor", "Master", "Other"], class: "form-control" %>
        	</div>

        	<div class="form-group">
	          <%= f.submit "Submit Application", class: "btn btn-success btn-lg custom-btn" %>
        	</div>
			<% end %>
		</div>
		<div class="col-sm-4 well">
			
		</div>
	</div>
	
</div>